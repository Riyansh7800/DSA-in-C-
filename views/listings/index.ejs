<%- layout('/layouts/boilerplate') %> 
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    margin-top: 0.75rem;
  }
  .filter{
    text-align: center;
    opacity: 0.8;
    margin-right: 0.85rem;
  }
  .toggle-switch{
    margin-left: auto;
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    position: relative;
  }
  .filter p{
    font-size: 0.9rem;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .gst{
    display:none
  }
  @media (max-width: 768px) {
    /* Adjust the max-width value based on when you want to switch to a smaller layout */
    .filter:nth-child(n+5) {
      display: none; /* Hide filters starting from the 4th one on small screens */
    }
  }
  @media (max-width: 460px) {
    /* Adjust the max-width value based on when you want to switch to a smaller layout */
    .filter:nth-child(n+3) {
      display: none; /* Hide filters starting from the 4th one on small screens */
    }
  }
 
  @media (max-width: 375px) {
    /* Adjust the max-width value based on when you want to switch to a smaller layout */
    .filter:nth-child(n+2) {
      display: none; /* Hide filters starting from the 4th one on small screens */
    }
  }
  @media (max-width: 525px) {
    /* Adjust the max-width value based on when you want to switch to a smaller layout */
    .filter:nth-child(n+4) {
      display: none; /* Hide filters starting from the 4th one on small screens */
    }
  }
  @media (max-width: 992px) {
    /* Adjust the max-width value based on when you want to switch to a smaller layout */
    .filter:nth-child(n+7) {
      display: none; /* Hide filters starting from the 4th one on small screens */
    }
  }
</style>
  <body>
   <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Pools</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-gopuram"></i>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-cow"></i>
      <p>farms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-water"></i>
      <p>Lakes</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tree"></i>
      <p>Forest</p>
    </div>
    <div class="filter">
      <i class="fa-regular fa-snowflake"></i>
      <p>Arctic</p>
    </div>
    <div class="filter">
          <i class="fa-solid fa-ship"></i>
      <p>Boats</p>
    </div>
    
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
  <p>Beach</p>
</div>
<div class="toggle-switch">
  <div class="form-check-reverse form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label label1" for="flexSwitchCheckDefault">Display after taxes</label>
  </div>
</div>

   </div>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 row-cols-xs-1 mt-2">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="image-link">
    <div class="card col reviewcard" >
      <img src="<%= listing.image.url %>" class="card-img-top" alt="image" style="height: 20rem;">
      <div class="card-img-overlay">
        <h5 class="card-title"></h5>
        <p class="card-text"></p>
        <p class="card-text"></p>
      </div>
      <div class="card-body">
        <p class="card-text">
         <b> <%= listing.title %> </b><br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          &nbsp; &nbsp; <i class="gst">+18% GST</i>

        </p>
      </div>
    </div>
    </a>
    <% } %>
